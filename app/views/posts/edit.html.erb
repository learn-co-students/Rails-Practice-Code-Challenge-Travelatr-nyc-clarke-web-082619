<h1>Edit Post</h1>
<%= form_for @post do |f|%>
    <%= f.label :blogger_id %>
    <%= f.collection_select(:blogger_id, @bloggers, :id, :name) %><br>
    <%= f.label :destination_id %>
    <%= f.collection_select(:destination_id, @destinations, :id, :name_and_country) %><br>
    <%= f.label :title %>
    <%= f.text_field :title%><br>
    <%= f.label :content %>
    <%= f.text_area :content%><br>
    <%= f.submit "Update Post"%>
<%end%>