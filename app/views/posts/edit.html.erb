<h1>Post form</h1>

<%= flash[:errors] %>

<%= form_for @post do |f| %>
    <label>Title</label>
    <%= f.text_field :title %><br>
    <label>Content</label>
    <%= f.text_field :content %><br>
    <label>Bloggers</label>
    <%= f.collection_select(:blogger_id, @bloggers, :id, :name) %><br>
    <label>Destinations</label>
    <%= f.collection_select(:destination_id, @destinations, :id, :name)%><br>
    <%= f.submit %>
<% end %>