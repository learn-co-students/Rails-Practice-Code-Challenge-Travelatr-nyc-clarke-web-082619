<%= form_for @post do |f| %>
    Title: <%= f.text_field :title, value: @post.title %> <br>
    Content: <%= f.text_field :content, value: @post.content %> <br>
    Blogger: <%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %> <br>
    Destination: <%= f.collection_select(:destination_id, Destination.all, :id, :name) %><br>
    <%= f.submit "Update Post" %>
<% end %>